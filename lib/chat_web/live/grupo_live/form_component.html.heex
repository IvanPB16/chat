<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="grupo-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :name, "Nombre" %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>

    <div>
      <%= submit "Crear grupo", phx_disable_with: "Creando..." %>
    </div>
  </.form>
</div>
